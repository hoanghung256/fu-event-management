    @await RenderSectionAsync("Scripts", required: false)


    <script>
        $(document).ready(function () {
            $('#menu').metisMenu();

            // Toggle sidebar
            $('#sidebar__active').on('click', function () {
                $('.expovent__sidebar').toggleClass('collapsed');
                // Tùy chỉnh hiển thị header title nếu cần (ví dụ: ẩn/hiện title khi sidebar thu gọn)
                // $('#header__title').toggle(! $('.expovent__sidebar').hasClass('collapsed'));
            });

            // Handle user dropdown
            $('#userportfolio').on('click', function (e) {
                e.preventDefault();
                e.stopPropagation();
                $('.user__dropdown').toggle();
            });

            // Close dropdown when clicking outside
            $(document).on('click', function (e) {
                if (!$(e.target).closest('.nav-item.p-relative').length) {
                    $('.user__dropdown').hide();
                }
            });
        });
    </script>
</body>
</html>