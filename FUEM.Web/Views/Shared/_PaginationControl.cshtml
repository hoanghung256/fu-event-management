<nav>
    <ul class="pagination justify-content-center">
        @if (Model.PageNumber > 1)
        {
            <li class="page-item">
                <a class="page-link" href="?pageNumber=@(Model.PageNumber - 1)">Previous</a>
            </li>
        }

        <li class="page-item disabled">
            <span class="page-link">Page @Model.PageNumber</span>
        </li>

        @if (Model.PageNumber * Model.PageSize < Model.TotalItems)
        {
            <li class="page-item">
                <a class="page-link" href="?pageNumber=@(Model.PageNumber + 1)">Next</a>
            </li>
        }
    </ul>
</nav>