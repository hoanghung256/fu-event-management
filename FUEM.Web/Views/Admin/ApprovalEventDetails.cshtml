@model FUEM.Domain.Entities.Event
@{
    ViewData["Title"] = "Event Details";
}

<section>
    <div class="app__slide-wrapper">
        <div class="breadcrumb__area">
            <div class="breadcrumb__wrapper mb-35">
                <div class="breadcrumb__main">
                    <div class="breadcrumb__inner">
                        <div class="breadcrumb__icon">
                            <i class="flaticon-home"></i>
                        </div>
                        <div class="breadcrumb__menu">
                            <nav>
                                <ul>
                                    <li><span><a asp-controller="Admin" asp-action="Dashboard">Dashboard</a></span></li>
                                    <li class="active"><span>Event Details</span></li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--Bat dau content cua page o day-->
        <div class="pb-20">
            <div>
                <div id="myTabContent">
                    <div id="day-tab-1-pane" role="tabpanel" aria-labelledby="day-tab-1" tabindex="0">
                        <!-- BODY GO HERE -->
                        <div class="event__details-area">
                            <div class="row">
                                <div class="col-md-7 p-1">
                                    <div class="event__details-left">
                                        <div class="body__card-wrapper mb-20">
                                            <div class="card__header-top">
                                                <div class="card__title-inner">
                                                    <h4 class="event__information-title">@Model.Fullname</h4>
                                                </div>
                                            </div>
                                            <div class="review__main-wrapper pt-25">
                                                <div class="review__meta mb-25"></div>
                                                <div class="review__author-meta mb-15">
                                                    <a asp-controller="Admin" asp-action="Profile" asp-route-role="organizer" asp-route-id="@Model.Organizer.Id">
                                                        <div class="review__author-thumb">
                                                            <img class="rounded-circle" src="@Url.Content(Model.Organizer.AvatarPath ?? "/img/default-avatar.png")" alt="Organizer Avatar" onerror="this.onerror=null; this.src='/img/default-avatar.png';">
                                                        </div>
                                                        <div class="review__author-name">
                                                            <h4>
                                                                <a asp-controller="Admin" asp-action="Profile" asp-route-role="organizer" asp-route-id="@Model.Organizer.Id">@Model.Organizer.Fullname</a>
                                                            </h4>
                                                        </div>
                                                    </a>
                                                </div>
                                                <div class="review__tab">
                                                    <nav>
                                                        <div class="nav nav-tabs" id="nav-tab" role="tablist">
                                                            <button class="nav-link active" id="nav-home-tab" data-bs-toggle="tab" data-bs-target="#nav-home" type="button" role="tab" aria-controls="nav-home" aria-selected="true">About</button>
                                                        </div>
                                                    </nav>
                                                    <div class="tab-content" id="nav-tabContent">
                                                        <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab" tabindex="0">
                                                            <div class="about__event-thumb w-img mt-40">
                                                                @if (Model.EventImages != null && Model.EventImages.Any())
                                                                {
                                                                    @foreach (var image in Model.EventImages)
                                                                    {
                                                                        <img src="@Url.Content(image.ToString())" alt="Event Image" />
                                                                    }
                                                                }
                                                                else
                                                                {
                                                                    <img src="@Url.Content("/img/event-placeholder.jpg")" alt="No Event Image" />
                                                                }
                                                            </div>

                                                            <div class="about__content mt-30">
                                                                <h4>About This Event</h4>
                                                                <p>@Model.Description</p>
                                                            </div>

                                                            <div class="ticket__purchase-wrapper mt-30">
                                                                <div class="ticket__price-inner">
                                                                    <div class="ticket__price-item">
                                                                    </div>
                                                                    <div class="ticket__price-item">
                                                                        @if (Model.Status == FUEM.Domain.Enums.EventStatus.PENDING)
                                                                        {
                                                                            <form asp-controller="Admin" asp-action="ApproveEvent" asp-route-eventId="@Model.Id" method="POST" onsubmit="return confirmAction(event);">
                                                                                <button class="element__btn green-bg" type="submit" value="approve" name="action">Approve</button>
                                                                                <button class="element__btn red-bg" type="submit" value="reject" name="action">Reject</button>
                                                                            </form>
                                                                        }
                                                                        else
                                                                        {
                                                                            <p>Event status: <b>@Model.Status.ToString()</b></p>
                                                                        }
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-5 p-1">
                                    <div class="event__details-right">
                                        <div class="body__card-wrapper mb-20">
                                            <div class="event__meta-time">
                                                <ul>
                                                    <li>
                                                        <span>Date: </span>
                                                        <i id="date">@Model.DateOfEvent.ToString()</i>
                                                    </li>
                                                    <li>
                                                        <span>Time: </span>
                                                        <i id="time">@Model.StartTime.ToString()</i> - <i id="time">@Model.EndTime.ToString()</i>
                                                    </li>
                                                    <li>
                                                        <span>Venue: </span>
                                                        @Model.Location.LocationName
                                                    </li>
                                                    @if (Model.GuestRegisterLimit > 0)
                                                    {
                                                        <li>
                                                            <span>Guest Registered Limit: </span>
                                                            @Model.GuestRegisterLimit
                                                        </li>
                                                        <li>
                                                            <span>Register Deadline: </span>
                                                            <i id="date">@Model.GuestRegisterDeadline.ToString()</i>
                                                        </li>
                                                    }
                                                    @if (Model.CollaboratorRegisterLimit > 0)
                                                    {
                                                        <li>
                                                            <span>Collaborator Limit: </span>
                                                            @Model.CollaboratorRegisterLimit
                                                        </li>
                                                        <li>
                                                            <span>Collaborator Register Deadline: </span>
                                                            <i id="date">@Model.CollaboratorRegisterDeadline.ToString()</i>
                                                        </li>
                                                    }
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--End content of page-->
    </div>
</section>

@section Scripts {
    <script>
        function confirmAction(event) {
            const action = event.submitter.value;
            let message = 'Are you sure you want to proceed with this action?';

            if (action === 'approve') {
                message = 'Are you sure you want to approve this event?';
            } else if (action === 'rejected') {
                message = 'Are you sure you want to reject this event?';
            }

            return confirm(message);
        }
    </script>
}