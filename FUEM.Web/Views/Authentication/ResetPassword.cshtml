@model FUEM.Web.ViewModels.ResetPasswordViewModel

<!DOCTYPE html>
<html lang="zxx">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="x-ua-compatible" content="ie=edge" />
    <title>FU - Event Management</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link rel="stylesheet" href="~/assets/app/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/assets/app/css/main.css" />

    <style>
        /* Hiển thị các lỗi trên 1 dòng */
        .validation-message {
            display: inline-block;
            margin-right: 16px;
            color: red;
            font-size: 14px;
        }

        span.field-validation-error,
        span.field-validation-valid {
            display: inline-block;
            margin-right: 12px;
            color: #dc3545;
        }
    </style>
</head>

<body class="body-area">
    <section class="signin__area">
        <div class="sign__main-wrapper">
            <div class="sign__left">
                <div class="sign__header">
                    <div class="sign__logo">
                        <a href="~/dashboard.html">
                            <img src="~/img/logo/logo-fpt.svg" alt="Logo" />
                        </a>
                    </div>
                    <div class="sign__link">
                        <a class="sign__link-active" href="#">Sign in</a>
                    </div>
                </div>

                <div class="sign__center-wrapper text-center mt-90">
                    <div class="sign__title-wrapper mb-40">
                        <h3 class="sign__title">Reset Password?</h3>
                        <p>Enter your email and OTP, then set a new password.</p>

                        @if (TempData["SuccessMessage"] != null)
                        {
                            <div class="alert alert-success mt-3">@TempData["SuccessMessage"]</div>
                        }
                        @if (TempData["Error"] != null)
                        {
                            <div class="alert alert-danger mt-3">@TempData["Error"]</div>
                        }

                        <div asp-validation-summary="All" class="text-danger mt-3"></div>
                    </div>

                    <div class="sign__input-form text-center">
                        <form asp-action="ResetPassword" asp-controller="Authentication" method="POST">
                            <div class="sign__input">
                                <input type="hidden" asp-for="Email" />
                                <input type="text" asp-for="Email" readonly placeholder="Email" />
                                <span><i class="flaticon-envelope"></i></span>
                                @* <div class="validation-message"> *@
                                @*     <span asp-validation-for="Email" class="text-danger"></span> *@
                                @* </div> *@
                            </div>

                            <div class="sign__input">
                                <input type="text" asp-for="Otp" placeholder="Enter OTP" />
                                <span><i class="flaticon-envelope"></i></span>
                                @* <div class="validation-message"> *@
                                @*     <span asp-validation-for="Otp" class="text-danger"></span> *@
                                @* </div> *@
                            </div>

                            <div class="sign__input">
                                <input type="password" asp-for="NewPassword" placeholder="New Password" />
                                <span><i class="flaticon-password"></i></span>
                                @* <div class="validation-message"> *@
                                @*     <span asp-validation-for="NewPassword" class="text-danger"></span> *@
                                @* </div> *@
                            </div>

                            <div class="sign__input">
                                <input type="password" asp-for="ConfirmNewPassword" placeholder="Confirm Password" />
                                <span><i class="flaticon-password"></i></span>
                                @* <div class="validation-message"> *@
                                @*     <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span> *@
                                @* </div> *@
                            </div>

                            <div class="sing__button mb-20">
                                <div class="validation-message" id="js-error-message" style="display:none;">
                                    New password and confirmation do not match.
                                </div>
                                <button id="save-button" class="input__btn w-100" type="submit" disabled>Save</button>
                            </div>
                        </form>

                        <div class="if__account mt-85">
                            <p>Don’t have an account?<a href="~/sign-up"> Sign up</a></p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="sign__right">
                <div class="sign__input-thumb" style="background-image: url('~/img/decorate/reset-password.jpg');"></div>
            </div>
        </div>
    </section>

    <script src="~/assets/app/js/jquery-3.6.0.min.js"></script>
    <script src="~/assets/app/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/app/js/main.js"></script>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }

    <script>
        const newPassword = document.getElementById("NewPassword");
        const confirmPassword = document.getElementById("ConfirmNewPassword");
        const saveButton = document.getElementById("save-button");
        const jsErrorMessage = document.getElementById("js-error-message");

        function checkPasswords() {
            if (newPassword.value === confirmPassword.value && newPassword.value !== "") {
                saveButton.disabled = false;
                jsErrorMessage.style.display = "none";
            } else {
                saveButton.disabled = true;
                if (newPassword.value && confirmPassword.value) {
                    jsErrorMessage.style.display = "inline-block";
                } else {
                    jsErrorMessage.style.display = "none";
                }
            }
        }

        document.addEventListener("DOMContentLoaded", () => {
            newPassword.addEventListener("input", checkPasswords);
            confirmPassword.addEventListener("input", checkPasswords);
            checkPasswords(); // Initial check
        });
    </script>
</body>
</html>
